{
    "name": "extcode/cart-saferpay",
    "type": "typo3-cms-extension",
    "description": "Shopping Cart(s) for TYPO3 - Saferpay Payment Provider",
    "homepage": "https://cart.extco.de",
    "license": [
        "GPL-2.0+"
    ],
    "keywords": [
        "TYPO3 CMS",
        "Shopping Cart",
        "Payment Provider",
        "Saferpay",
        "Cart"
    ],
    "authors": [
        {
            "name": "Daniel Gohlke",
            "email": "ext.cart@extco.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/extcode/cart_saferpay/issues"
    },
    "require": {
        "php": ">=7.0.0 <7.5",
        "ext-curl": "*",
        "ext-json": "*",
        "typo3/cms-core": "^8.7",
        "typo3/cms-extbase": "^8.7",
        "extcode/cart": "^5.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "helmich/typo3-typoscript-lint": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Extcode\\CartSaferpay\\": "Classes"
        }
    },
    "replace": {
        "extcode/cart-saferpay": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/cart_saferpay ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/cart_saferpay"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}